server {
        listen       80;
        server_name dj.local ;

        location / {
            default_type  text/html;

            proxy_set_header    Host        $host;
            proxy_set_header    X-Forwarded-For    $remote_addr;
            proxy_set_header    X-Request-Filename $request_filename;

            proxy_pass  http://127.0.0.1:8000;
        }
    }

